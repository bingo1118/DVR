<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2sp"
        android:background="@drawable/top">
       
	   
     	<TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5sp"
                android:text="设置"
                android:textColor="#fff"
                android:layout_weight="10"
                android:textSize="20sp" />
      
      
         </LinearLayout>
         
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#CCCCCC">
         
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:background="#fff">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10sp"
            android:text="地理位置解析" 
            android:textSize="18sp"/>
         <include
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                layout="@layout/line" />
         
        <Switch
            android:id="@+id/switch2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10sp"
            android:text="GPS矫正" 
            android:textSize="18sp"/>
        
        <include
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                layout="@layout/line" />
        
         <LinearLayout
                android:id="@+id/speed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/speed_text_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="速度单位"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/speed_number_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="公里"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right" />
            </LinearLayout>
            
         <include
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                layout="@layout/line" />
         
         <LinearLayout
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/version_text_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="版本"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/version_number_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="V1.0"
                    android:textColor="#000"
                    android:textSize="18sp" />
                 <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right" />
                
            </LinearLayout>
            <include
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                layout="@layout/line" />
           
        
        </LinearLayout>

     <Button
        android:id="@+id/change_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="切换账号"
        android:paddingLeft="60sp"
        android:paddingRight="60sp"
        android:textColor="#fff"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:background="@drawable/btn_change_account" />
     </LinearLayout>

</LinearLayout>